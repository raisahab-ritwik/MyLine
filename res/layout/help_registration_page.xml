<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eceeeeee" >

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:background="#023B60" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_margin="28dp"
        android:background="#22A7F0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#023B60" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="28dp"
        android:background="#22A7F0" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="#023B60" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_margin="28dp"
        android:background="#22A7F0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="#023B60" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="28dp"
        android:background="#22A7F0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="28dp"
        android:orientation="vertical"
        android:padding="8dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:shadowColor="#dd023B60"
                android:shadowDx="-1"
                android:shadowDy="-1"
                android:shadowRadius="2"
                android:text="HELP!"
                android:textColor="#22A7F0"
                android:textSize="11pt" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:onClick="onBackButtonClicked"
                android:scaleType="centerInside"
                android:src="@drawable/btn_cancel" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_fin_advisory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Welcome to Seva60Plus HUM! Please Register by providing your: "
                    android:textAppearance="?android:attr/textAppearance"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Name\nPhone Number\nEmail [ are we taking email? I forgot ]\nEtc\nEtc"
                    android:textAppearance="?android:attr/textAppearance"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="You also need to add at least one SAATHI, by providing his/her:
        \n\nName\nPhone Number\nEmail"
                    android:textAppearance="?android:attr/textAppearance"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="This is a one time process. Upon successful registration you will be connected with your loved ones!"
                    android:textAppearance="?android:attr/textAppearance"
                    android:textColor="#333333" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>