<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuPanel"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#EFEFF4"
    android:gravity="right"
    android:orientation="vertical" >

    <View
        android:id="@+id/headerdivider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/close_lay"
        android:background="#C2C2C2" />

    <RelativeLayout
        android:id="@+id/close_lay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#FFF"
        >
        <TextView
            android:id="@+id/about_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="HELP DESK"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/close"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_close_image"
            android:text="Close"
            android:textColor="#fff" />

        

    </RelativeLayout>

    <ScrollView
        android:id="@+id/about_us_scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/headerdivider"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/list_info_lay"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <View
                android:id="@+id/view1copy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/view1"
                android:layout_marginTop="10dp"
                android:background="#C2C2C2" />

            <RelativeLayout
                android:id="@+id/phone_text_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF" >

                <ImageView
                    android:id="@+id/call_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/seva_telephone" />

                <TextView
                    android:id="@+id/phone_text"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/call_icon"
                    android:gravity="center_vertical"
                    android:text="KOLKATA :\n"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/call_icon2"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="#02AE1A"
                    android:text="CALL"
                    android:textColor="#FFF"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#C2C2C2" />

            <View
                android:id="@+id/view2copy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:background="#C2C2C2" />

            <RelativeLayout
                android:id="@+id/phone_text_lay4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF" >

                <ImageView
                    android:id="@+id/call_icon4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/seva_telephone" />

                <TextView
                    android:id="@+id/phone_text4"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/call_icon4"
                    android:gravity="center_vertical"
                    android:text="DELHI : \n"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/call_icon4copy"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="#02AE1A"
                    android:text="CALL"
                    android:textColor="#FFF"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/call_icon2"
                android:layout_marginTop="0dp"
                android:background="#C2C2C2" />

            <View
                android:id="@+id/view3copy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/view3"
                android:layout_marginTop="10dp"
                android:background="#C2C2C2" />

            <RelativeLayout
                android:id="@+id/getdirect_text_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="#FFF" >

                <TextView
                    android:id="@+id/get_direction_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/get_direc_icon"
                    android:gravity="center_vertical"
                    android:text="Get Direction"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/get_direc_icon2"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#404041"
                    android:text="MORE"
                    android:textColor="#FFF"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/get_direc_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/map_directions"
                    android:gravity="center" />

                <RelativeLayout
                    android:id="@+id/RelativeLayout01"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="#FFF" >

                    <ImageView
                        android:id="@+id/ImageView01"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/seva_web" />

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/Button01"
                        android:layout_toRightOf="@+id/ImageView01"
                        android:padding="7dp"
                        android:text="www.seva60"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/Button01"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:background="#404041"
                        android:text="VISIT"
                        android:textColor="#FFF"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0dp"
                android:background="#C2C2C2" />

            <View
                android:id="@+id/view4copy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:background="#C2C2C2" />

            <RelativeLayout
                android:id="@+id/website_text_lay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:background="#FFF" >

                <ImageView
                    android:id="@+id/web_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/seva_email" />

                <TextView
                    android:id="@+id/web_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/web_text_icon2"
                    android:layout_toRightOf="@+id/web_icon"
                    android:padding="7dp"
                    android:text="email@seva.co.in"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/web_text_icon2"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:background="#404041"
                    android:text="SEND"
                    android:textColor="#FFF"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0dp"
                android:background="#C2C2C2" />

            <View
                android:id="@+id/view5copy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:background="#C2C2C2" />

            <RelativeLayout
                android:id="@+id/distance_text_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="#FFF"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/dist_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/seva_facebook" />

                <TextView
                    android:id="@+id/distance_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/dist_icon"
                    android:gravity="center_vertical"
                    android:text="facebook"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0dp"
                android:background="#C2C2C2" />

            <View
                android:id="@+id/view6copy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:background="#C2C2C2" />

            <RelativeLayout
                android:id="@+id/distance_text_lay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="#FFF"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/dist_icon2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/seva_twitter" />

                <TextView
                    android:id="@+id/distance_text2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/dist_icon2"
                    android:gravity="center_vertical"
                    android:text="twitter"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0dp"
                android:background="#C2C2C2" />

            <View
                android:id="@+id/view0"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#C2C2C2" />

            <RelativeLayout
                android:id="@+id/name_text_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="#FFF" >

                <TextView
                    android:id="@+id/name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:text="take a tour"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="normal" />
            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/name_text"
                android:layout_marginTop="0dp"
                android:background="#C2C2C2" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>