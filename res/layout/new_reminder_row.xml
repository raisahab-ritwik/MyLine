<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:background="#FFF" >
<View 
    android:id="@+id/view1"
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="#C2C2C2"
    />
    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:contentDescription="@string/pill_description"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/reminder_list_icon"
         />

    <TableLayout
        android:id="@+id/table_lay"
        android:layout_toRightOf="@+id/menu_icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:visibility="gone" >

            <TextView
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dip"
                android:textColor="#000"
                android:text="User"
                android:textSize="30sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
             >

            <TextView
                android:id="@+id/text1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:textColor="#023B60"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Reminder"
                android:textSize="20sp" />
           
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:weightSum="1" >

            <TextView
                android:id="@+id/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#6D6E76"
                android:text="Days"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:weightSum="3" >

            <TextView
                android:id="@+id/hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dip"
                android:textColor="#6D6E76"
                android:text="Hour"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>
    
    <LinearLayout
                android:id="@+id/buttonLay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/table_lay"
                android:background="#023B60"
                android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#023B60"
                android:gravity="center_horizontal"
                 >
                <ImageView
                    android:id="@+id/edit_img"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:background="@drawable/new_pill_edit" />
                
                <TextView 
                    android:id="@+id/edit_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/edit_img"
                android:textColor="#FFF"/>
                
                </RelativeLayout>

            <RelativeLayout
                android:id="@+id/del_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="DELETE"
                android:background="#02AE1A"
                android:gravity="center_horizontal"
                android:textColor="#FFF" >
                
                <ImageView
                    android:id="@+id/delete_img"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:background="@drawable/new_pill_del" />
                
                <TextView 
                    android:id="@+id/delete_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELETE"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/delete_img"
                android:textColor="#FFF"/>
                
                
                </RelativeLayout>

            </LinearLayout>
            
    
