<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/info_Lay"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footerLay"
        android:layout_below="@+id/subheaderLay"
        android:background="#EFEFF4" >

        <ScrollView
            android:id="@+id/info_lay_scroll"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/list_info_lay"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >
                
                <ImageView 
                    android:id="@+id/imageInfoLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/sukhantfuneral"/>

                <View
                    android:id="@+id/view0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#C2C2C2" />

                <RelativeLayout
                    android:id="@+id/name_text_lay"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:background="#FFF" >

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:text="NAME"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/name_text"
                    android:layout_marginTop="0dp"
                    android:background="#C2C2C2" />

                <View
                    android:id="@+id/view1copy"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/view1"
                    android:layout_marginTop="10dp"
                    android:background="#C2C2C2" />

                <RelativeLayout
                    android:id="@+id/add_text_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="#FFF"
                    android:padding="5dp" >

                    <ImageView
                        android:id="@+id/address_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/map_address" />

                    <TextView
                        android:id="@+id/address_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@+id/address_icon"
                        android:text="Mumbai , Navi Mumbai and Thane"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#C2C2C2" />

                <View
                    android:id="@+id/view2copy"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:background="#C2C2C2" />

                <RelativeLayout
                    android:id="@+id/phone_text_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF" >

                    <ImageView
                        android:id="@+id/call_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/map_phone" />

                    <TextView
                        android:id="@+id/phone_text"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/call_icon"
                        android:gravity="center_vertical"
                        android:text="+91 22 8655808080"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/call_icon2"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="#02AE1A"
                        android:text="CALL"
                        android:textColor="#FFF"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/call_icon2"
                    android:layout_marginTop="0dp"
                    android:background="#C2C2C2" />
                
                <View
                    android:id="@+id/view4copy"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:background="#C2C2C2" />
<RelativeLayout
                    android:id="@+id/website_text_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="#FFF" >

                    <ImageView
                        android:id="@+id/web_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/map_website" />

                    <TextView
                        android:id="@+id/web_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/web_text_icon2"
                        android:layout_toRightOf="@+id/web_icon"
                        android:gravity="center_vertical"
                        android:padding="7dp"
                        android:text="www.sukhantfuneral.com"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/web_text_icon2"
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:layout_alignParentRight="true"
                        android:background="#404041"
                        android:text="VISIT"
                        android:textColor="#FFF"
                        android:textStyle="bold" />
                </RelativeLayout>
<View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="0dp"
                    android:background="#C2C2C2" />

                <View
                    android:id="@+id/view3copy"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/view3"
                    android:layout_marginTop="10dp"
                    android:background="#C2C2C2" />

                <RelativeLayout
                    android:id="@+id/getdirect_text_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="#FFF" >

                    <TextView
                        android:id="@+id/get_direction_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="00dp"
                        android:paddingTop="15dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="10dp"
                        
                        android:layout_toRightOf="@+id/get_direc_icon"
                        android:gravity="center_horizontal|left"
                        android:text="Sukhant Antyavidhi Seva is an organization that has been created with the aim of providing a dignified and respectful farewell to life. Our 24 x 7
services include arranging for the complete final rites starting from moving the deceased person to the crematorium to arranging for the death certificate, obituary and prayer
meeting , thereby decreasing the stress and worry of all these requirements on your beloved ones who are already grief struck. Sukhant also provides all necessary
infrastructure / facility / services for the same.
\n\nSukhant also provides all necessary infrastructure/facility/services . Currently we are based in Mumbai and our services are being provide to residents of Mumbai, Thane and
Navi Mumbai area. Timings for Antyavidhi Seva are 7am to 7pm including Sundays and Holidays
"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/get_direc_icon2"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#404041"
                        android:text="MORE"
                        android:visibility="invisible"
                        android:textColor="#FFF"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/get_direc_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="0dp"
                        android:visibility="gone"
                        android:background="@drawable/map_directions"
                        android:gravity="center" />
                </RelativeLayout>

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="0dp"
                    android:background="#C2C2C2" />
                
                
                <View
                    android:id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent" />
                
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    
    

</LinearLayout>
