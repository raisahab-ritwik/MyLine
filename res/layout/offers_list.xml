<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:id="@+id/headerLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/header" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/subheaderLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/headerLay"
        android:background="#FFF" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/back_icon"
            android:textColor="#FFF"
            android:textSize="30sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="SPECIAL OFFERS"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#023B60"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_content_close"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footerLay"
        android:layout_below="@+id/subheaderLay"
        android:background="#0477C0"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#0477C0"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <ScrollView
                android:id="@+id/sv_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0477C0"
                android:layout_margin="10dp"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/list_lay1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#0477C0"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/ll_torch_heartbeat"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:id="@+id/rl_hum_training"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/off_eldercare" >

                            <TextView
                                android:id="@+id/tv_hum_training"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="14dp"
                                android:paddingBottom="10dp"
                                android:text="ELDER CARE"
                                android:textColor="#0477C0"
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_doctor_speaks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/off_medical" >

                            <TextView
                                android:id="@+id/tv_doctor_speaks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="14dp"
                                android:paddingBottom="10dp"
                                android:text="MEDICAL"
                                android:textColor="#0477C0"
                                android:textSize="15sp" />
                        </RelativeLayout>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:id="@+id/ll_financial_advisory"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:id="@+id/rl_financial_advisory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/off_caregiver" >

                            <TextView
                                android:id="@+id/tv_financial_advisory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="14dp"
                                android:paddingBottom="10dp"
                                android:text="CAREGIVER"
                                android:textColor="#0477C0"
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_fitness"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/off_funeral" >

                            <TextView
                                android:id="@+id/tv_fitness"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="14dp"
                                android:paddingBottom="10dp"
                                android:text="FUNERAL SERVICES"
                                android:textColor="#0477C0"
                                android:textSize="15sp" />
                        </RelativeLayout>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:id="@+id/ll_technology"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:id="@+id/rl_technology"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/off_fashion" >

                            <TextView
                                android:id="@+id/tv_technology"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="14dp"
                                android:paddingBottom="10dp"
                                android:text="FASHION"
                                android:textColor="#0477C0"
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_art_and_culture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/off_realestate" >

                            <TextView
                                android:id="@+id/tv_art_and_culture"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="14dp"
                                android:paddingBottom="10dp"
                                android:text="REAL ESTATE"
                                android:textColor="#0477C0"
                                android:textSize="15sp" />
                        </RelativeLayout>
                    </LinearLayout>
                    
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footerLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <include layout="@layout/footer2" />
    </LinearLayout>

</RelativeLayout>