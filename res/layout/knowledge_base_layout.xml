<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.wrc.seva60hum.MainActivity"
    android:background="#0477C0" >
    
    
    <LinearLayout 
        android:id="@+id/headerLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     <include layout="@layout/header"/>
</LinearLayout>

    <RelativeLayout 
        android:id="@+id/subheaderLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/headerLay"
        android:background="#FFF">
        
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="30sp"
            android:background="@drawable/back_icon"
           	android:visibility="visible"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/tv_fin_advisory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="MEDIA CENTRE"
            android:textStyle="bold"
            android:textColor="#023B60"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        
    </RelativeLayout>

    <LinearLayout 
			android:id="@+id/ll_content_close"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#0477C0"
            android:layout_below="@+id/subheaderLay"
            android:layout_above="@+id/footerLay"
            android:orientation="vertical" >

    
<LinearLayout 
			android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#0477C0"
            
            android:orientation="vertical" >
            
<ScrollView
    android:id="@+id/sv_items"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#0477C0"
        android:scrollbars="none"
        >
    
        <LinearLayout
        android:id="@+id/list_lay1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#0477C0"
        
        android:orientation="vertical" >
            <RelativeLayout
                android:id="@+id/rl_hum_training"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="#FFF" >

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/know_video" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView10"
                    android:text="VIDEO"
                    android:textColor="#22A7F0"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/arrow" />

            </RelativeLayout>
            
            
            <RelativeLayout
                android:id="@+id/rl_doctor_speaks"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="#FFF" >

                <ImageView
                    android:id="@+id/riv_saathi2_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/know_audio" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/riv_saathi2_picture"
                    android:text="AUDIO"
                    android:textColor="#22A7F0"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp" />

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/arrow" />

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rl_financial_advisory"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="#FFF" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/know_article" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView3"
                    android:text="ARTICLE"
                    android:textColor="#22A7F0"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp" />

                <ImageView
                    android:id="@+id/imageView30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/arrow" />

            </RelativeLayout>
            
            
            
            
        </LinearLayout>

            </ScrollView>
            
        </LinearLayout>
   </LinearLayout>

      <LinearLayout
        android:id="@+id/footerLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <include layout="@layout/footer" />
    </LinearLayout>
</RelativeLayout>
