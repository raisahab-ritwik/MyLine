     <View
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        
        android:background="#EB8F01" />  

    <TextView
        android:id="@+id/tv_fin_advisory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:textColor="#0474BB"
        android:textStyle="italic"
        android:textSize="18sp"
        android:text="Please spread the word" />

    <Button
        android:id="@+id/twitter_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/twitter"
         />

    <Button
        android:id="@+id/facebook_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:background="@drawable/facebook"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/twitter_btn"
         />

    <Button
        android:id="@+id/whatsapp_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/whatsapp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/facebook_btn"
         />

</RelativeLayout>
