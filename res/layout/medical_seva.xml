<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.wrc.seva60hum.MainActivity"
    android:background="#fff" >
    
    
    <LinearLayout 
        android:id="@+id/headerLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     <include layout="@layout/header"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/mLlayoutBottomButtonsMedical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_below="@+id/headerLay"
    android:orientation="vertical" >

        <Button
            android:id="@+id/orderMedBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30sp"
            
            
            android:background="#FFF"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/pillReminderBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30sp"
            
            android:background="#FFF"
            android:textColor="#FFF"
            android:layout_marginTop="3dp" />
        <Button
            android:id="@+id/monitorHeartBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30sp"
            
            android:background="#FFF"
            android:textColor="#FFF"
            android:layout_marginTop="3dp" />
        <Button
            android:id="@+id/safeBtn"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:textSize="30sp"
            android:visibility="invisible"
            android:background="@drawable/button_image"
            android:textColor="#FFF"
            android:layout_marginTop="3dp" 
            android:text="Fall Safe"/>
        <Button
            android:id="@+id/shareBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30sp"
            android:visibility="invisible"
            android:background="@drawable/share_location"
            android:textColor="#FFF"
            android:layout_marginTop="3dp" />

        
        
        
    </LinearLayout>

</RelativeLayout>
