<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#22A7F0"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#22A7F0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:text="@string/home"
            android:textColor="#FFF"
            android:textSize="22sp" />

        <LinearLayout
            android:id="@+id/llMenu"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/London"
                android:src="@drawable/menu_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearyLay"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/header_title"
            android:gravity="center_vertical|right"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rlHome"
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="onHomeClick"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/back_settings2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/home_icon"
                    android:contentDescription="@string/London" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/helpLay"
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:gravity="center_horizontal|center_vertical"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/help_me"
                    android:contentDescription="@string/London" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/back_settings"
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:gravity="center_horizontal|center_vertical" >

                <ImageView
                    android:id="@+id/back_settings1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/settings_icon"
                    android:contentDescription="@string/London" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22A7F0" />

</LinearLayout>