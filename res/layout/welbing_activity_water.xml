<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#0477C0" >

    <LinearLayout
        android:id="@+id/headerLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/header" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/subheaderLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/headerLay"
        android:background="#FFF"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/back_icon"
            android:textColor="#FFF"
            android:textSize="30sp"
            android:visibility="visible" />

        
        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="WELL BING"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#023B60"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/subheaderLay1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/subheaderLay"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/task_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#FFF"
            android:text="WELLBEING"
            android:textColor="#5A7F97"
            android:textSize="20sp" />

        <Button
            android:id="@+id/static_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#023B60"
            android:text="STATISTICS"
            android:textColor="#FFF"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/subheaderLay2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/subheaderLay1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/wel_water_btn"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/bottom_line_lay_tab"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img_water_btn"
                android:layout_width="16dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/sleep_org_icon" />

            <Button
                android:id="@+id/btn_water_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img_water_btn"
                android:background="#FFF"
                android:text="SLEEP"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#EB8F01"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wel_ex_btn"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img_ex_btn"
                android:layout_width="16dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/well_tab_ex" />

            <Button
                android:id="@+id/btn_ex_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img_ex_btn"
                android:background="#FFF"
                android:text="EXERCISE"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wel_mood_btn"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img_mood_btn"
                android:layout_width="16dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/well_tab_mood" />

            <Button
                android:id="@+id/btn_mood_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img_mood_btn"
                android:background="#FFF"
                android:text="MOOD"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerLay"
        android:layout_below="@+id/subheaderLay2"
        android:background="#0477C0" >

        <RelativeLayout
            android:id="@+id/image_lay"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/welbing_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sleep" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/text_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_lay"
            android:layout_marginTop="5dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/text_welbing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="HOW MANY HOURS DID YOU SLEEP TONIGHT?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/button_lay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_lay"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edit_glass"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/my_holo_textfield_activated_holo_light"
                android:gravity="center_horizontal|center"
                android:hint="No. of glass"
                android:inputType="number"
                android:maxLength="3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:visibility="gone" />

            <Button
                android:id="@+id/less_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/img_wel_btn2"
                android:layout_weight="1"
                android:background="@drawable/button_border_white_round"
                android:gravity="center"
                android:text="Less than 5"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#023B60"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/equal_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/img_wel_btn2"
                android:layout_weight="1"
                android:background="@drawable/button_border_white_round"
                android:gravity="center"
                android:text="   5 - 8   "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#023B60"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/more_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/img_wel_btn2"
                android:layout_weight="1"
                android:background="@drawable/button_border_white_round"
                android:gravity="center"
                android:text="More than 8"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#023B60"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/footerLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <include layout="@layout/footer" />
    </LinearLayout>

</RelativeLayout>